{
    "default": {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "paths": [
            "src/test/features/"
        ],
        "dryRun": false,
        "require": [
            "src/test/steps/*.ts",
            "src/hooks/*.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "timeout": 20000,
        "format": [
            "progress-bar",
            "html:test-results/cucumber-report.html",
            "json:test-results/cucumber-report.json"
        ]
    }
}